<resources>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">@color/color_bg</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="windowSplashScreenAnimationDuration">100</item>  # Required for
        # animated icons

        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_architecture</item>

        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/Theme.SplashSample</item>  # Required.
    </style>
</resources>